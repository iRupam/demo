var itemPurchased = window.prompt('Please tell us the no of items purchased?')

if(itemPurchased>3){
	alert('You have got a promo code')
} else if(itemPurchased == 3) {
 alert('purchase one more item and you will get promo code')
}else{
alert('You are not eligible for a promo code!!')
}
document.getElementById("root").innerHTML = "PROMO CODE CHECKER";

